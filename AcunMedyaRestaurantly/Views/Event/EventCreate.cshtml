@model AcunMedyaRestaurantly.Entities.Event

@{
    ViewBag.Title = "EventCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Etkinlik Ekleme</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Etkinlik Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <label>Açıklama 1</label>
                            @Html.TextBoxFor(x => x.Message1, new { @class = "form-control" })
                            <label>Açıklama 2</label>
                            @Html.TextBoxFor(x => x.Message2, new { @class = "form-control" })
                            <label>Açıklama 3</label>
                            @Html.TextBoxFor(x => x.Message3, new { @class = "form-control" })
                            <label>Açıklama 4</label>
                            @Html.TextBoxFor(x => x.Message4, new { @class = "form-control" })
                            <label>Açıklama 5</label>
                            @Html.TextBoxFor(x => x.Message5, new { @class = "form-control" })
                            <label>Resim</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<AcunMedyaRestaurantly.Entities.Reservation>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>E-Posta</th>
                                    <th>Telefon</th>
                                    <th>Açıklama</th>
                                    <th>Durum</th>
                                    <th>Detaylar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span>@item.Phone</span>
                                    </td>
                                    <td>@item.Description</td>
                                    @if (item.ReservationStatus == "Onay Bekliyor")
                                    {
                                        <td><i class="fa fa-circle-o text-info  mr-2"></i> Onay Bekliyor...</td>
                                    }
                                    @if (item.ReservationStatus == "Onaylandı")
                                    {
                                        <td><i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı...</td>
                                    }
                                    @if (item.ReservationStatus == "İptal Edildi")
                                    {
                                        <td><i class="fa fa-circle-o text-danger  mr-2"></i> Reddedildi...</td>
                                    }
                                    <td><a href="/Reservation/ReservationEdit/@item.ReservationId" class="btn btn-outline-info">Detaylar</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
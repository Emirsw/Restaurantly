
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead", "Default")

<body>

    @Html.Action("PartialTop", "Default")

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a href="index.html">Restaurantly</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            @Html.Action("PartialNavbar", "Default")
            <a href="#book-a-table" class="book-a-table-btn scrollto d-none d-lg-flex">Rezervasyon</a>

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    @Html.Action("PartialFeature", "Default")
    <!-- End Hero -->

    <main id="main">

        @Html.Action("PartialAbout", "Default")
        @Html.Action("PartialService", "Default")
        @Html.Action("PartialMenu", "Default")
        @Html.Action("PartialSpecial", "Default")
        @Html.Action("PartialEvent", "Default")
        @Html.Action("PartialBookaTable", "Default")
        @Html.Action("PartialTestimonial", "Default")
        @Html.Action("PartialGallery", "Default")
        @Html.Action("PartialChef", "Default")
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>İletişim</h2>
                    <p>Bize ulaş!</p>
                </div>
            </div>

            <div data-aos="fade-up">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d192210.99286983267!2d28.85948822754131!3d41.17169403945538!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x409fe02232a852d7%3A0x3a86cad07b1a4ec4!2zU2FyxLF5ZXIvxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1739991819929!5m2!1str!2str" width="100%" height="350px;" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <div class="container" data-aos="fade-up">

                <div class="row mt-5">

                    <div class="col-lg-4">
                        @Html.Action("PartialAdress", "Default")

                    </div>
                    @if (@ViewBag.Message != null)
                    {
                        <script>alert('@ViewBag.Message')</script>
                    }

                    @Html.Action("PartialContact", "Default")


                </div>

            </div>
        </section>

    </main>
    @Html.Action("PartialFooter", "Default")

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/Restaurantly/Restaurantly/assets/vendor/aos/aos.js"></script>
    <script src="~/Restaurantly/Restaurantly/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Restaurantly/Restaurantly/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Restaurantly/Restaurantly/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/Restaurantly/Restaurantly/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Restaurantly/Restaurantly/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/Restaurantly/Restaurantly/assets/js/main.js"></script>

</body>

</html>
